build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules: StringExample
  build-depends:
    base >=4.7 && <5,
    jarify,
    jni,
    jvm,
    text
  default-language: Haskell2010

executable string-example-exe
  main-is: Main.hs
  build-depends:
    base
    , string-example
  default-language: Haskell2010
  ghc-options: -dynamic -threaded
  ld-options: -pie
